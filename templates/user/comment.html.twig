{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }}{% endblock %}

{% block body %}
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>{{ app.user.name }}</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/user">User</a></li>
                        <li class="breadcrumb-item active">User Comments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="shop-box-inner">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                    <div class="right-product-box">
                        <h1>User Comments</h1>

                        <table class="table table-bordered">
                            <thead class="thead-dark">
                            <tr>
                                <th>Subject</th>
                                <th>Comment</th>
                                <th>Status</th>
                                <th>Food</th>
                                <th>Created_at</th>
                                <th>Rate</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for comment in comments  %}
                                <tr>
                                    <td>{{ comment.subject }}</td>
                                    <td>{{ comment.comment }}</td>
                                    <td>{{ comment.status }}</td>
                                    <td><b><a href="{{ path('food_show', {'id': comment.foodid}) }}">{{ comment.title }}</a></b></td>
                                    <td>{{ comment.created_at ? comment.created_at|date('d-m-y') : ''}}</td>
                                    <td>{{ comment.rate }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>


                    </div>
                </div>
                {{ include('user/usermenu.html.twig') }}
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

{% endblock %}
