{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }}{% endblock %}

{% block body %}
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>{{ app.user.name }}</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">User Panel</a></li>
                        <li class="breadcrumb-item active">User Information</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="shop-box-inner">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                    <div class="right-product-box">
                        <h1>User Profiles Information</h1>
                        <table class="table table-dark table-bordered table-striped ">
                            <tbody>
                            <tr>
                                <th>Email</th>
                                <td>{{ app.user.email }}</td>
                            </tr>
                            <tr>
                                <th>Roles</th>
                                <td>{{ app.user.roles ? app.user.roles|json_encode : '' }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ app.user.name }}</td>
                            </tr>
                            <tr>
                                <th>Surname</th>
                                <td>{{ app.user.surname }}</td>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td>{{ app.user.adress }}</td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td>{{ app.user.phone }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                {{ include('user/usermenu.html.twig') }}
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

{% endblock %}
