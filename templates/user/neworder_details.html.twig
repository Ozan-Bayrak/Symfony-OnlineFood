{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }}{% endblock %}

{% block body %}
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>{{ app.user.name }}</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">User Orders</a></li>
                        <li class="breadcrumb-item active">Orders</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="shop-box-inner">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                    <div class="right-product-box">
                        <div class="contact-box-main">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-8 col-sm-12">
                                        <div class="contact-form-right">
                                            <h2>Restaurant: {{ food.title }}</h2>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <div class="alert alert-success" role="alert">
                                                            <input  type="text" value="Price: {{ orders.price }} " readonly>
                                                            <input  type="text" value="Quantity:{{ amount }} " readonly>
                                                            <input  type="text" value="Total= {{ total }} " readonly>
                                                        </div>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            {{ include('messages.html.twig')  }}
                                            <form  name="order_details" method="post" role="form" >
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <input value="{{ app.user.name }}" type="text" class="form-control" id="order_details_name" name="order_details[name]" placeholder="Your Name" required data-error="Please enter your name">
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <input value="{{ app.user.surname }}" type="text" class="form-control" id="order_details_surname" name="order_details[surname]" placeholder="Your Surname" required data-error="Please enter your surname">
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <input value="{{ app.user.email }}" type="text" placeholder="Your Email" id="order_details_email" name="order_details[email]" class="form-control"  required data-error="Please enter your email">
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" id="order_details_phone" name="order_details[phone]" placeholder="Number" required data-error="Please enter your number">
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <textarea type="text" class="form-control" id="order_details_note" name="order_details[note]" placeholder="adress" required data-error="Please enter your adress"></textarea>
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <textarea class="form-control" id="order_details_messages" name="order_details[messages]" placeholder="Your Message" rows="4" data-error="Write your message" required></textarea>
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                        *******Credit Card Information*********
                                                        <div class="submit-button text-center">
                                                            <input type="hidden" name="amount" value="{{ amount }}">
                                                            <input type="hidden"  name="token" value="{{ csrf_token('form-order_details') }}" />
                                                            <button class="btn btn-success" type="submit">SatÄ±n Al</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{ include('user/usermenu.html.twig') }}
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

{% endblock %}
