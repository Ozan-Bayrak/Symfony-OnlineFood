{% extends 'homebase.html.twig' %}

{% block title %}Food{% endblock %}

{% block body %}
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>{{ food.title }}</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/user">User</a></li>
                        <li class="breadcrumb-item active">Food Edit</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="shop-box-inner">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                    <div class="right-product-box">
                        <h1>Food</h1>

                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ food.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ food.title }}</td>
                            </tr>
                            <tr>
                                <th>Keywords</th>
                                <td>{{ food.keywords }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ food.description }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>{{ food.image }}</td>
                            </tr>
                            <tr>
                                <th>Detail</th>
                                <td>{{ food.detail }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ food.status }}</td>
                            </tr>
                            <tr>
                                <th>Created_at</th>
                                <td>{{ food.createdAt ? food.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Updated_at</th>
                                <td>{{ food.updatedAt ? food.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Details</th>
                                <td>{{ food.details }}</td>
                            </tr>
                            <tr>
                                <th>Userid</th>
                                <td>{{ food.userid }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('user_food_index') }}">back to list</a>

                        <a href="{{ path('user_food_edit', {'id': food.id}) }}">edit</a>

                        {{ include('food/_delete_form.html.twig') }}

                    </div>
                </div>
                {{ include('user/usermenu.html.twig') }}
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
{% endblock %}
