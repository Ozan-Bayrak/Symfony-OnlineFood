{% extends 'homebase.html.twig' %}

{% block title %}Food index{% endblock %}

{% block body %}
<script language="JavaScript" type="text/javascript">
    function openWin( windowURL, windowName, windowFeatures) {
        window.open( windowURL, windowName, windowFeatures);
    }
</script>
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>{{ app.user.name }}</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/user">User</a></li>
                    <li class="breadcrumb-item active">User Food List</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                <div class="right-product-box">
                    <h1>Food List</h1>
                            <table class="table table-borderless table-data3">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Keywords</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>I.Gallery</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for food in foods %}
                                    <tr>
                                        <td>{{ food.id }}</td>
                                        <td>{{ food.title }}</td>
                                        <td>{{ food.keywords }}</td>
                                        <td>{{ food.description }}</td>
                                        <td><img class="col-md-5" src="{{ asset ('uploads/images/')~ food.image }}" height="40"></td>
                                        <td>
                                            <a href="javascript:window.open('{{ path('user_image_new',{'id': food.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizeable=no,width=900,height=600');">
                                                <img src="{{ asset('assets/admin/images/gallery.png') }}" height="30"></a>
                                        </td>
                                        <td>{{ food.status }}</td>
                                        <td>
                                            <a href="{{ path('user_food_edit', {'id': food.id}) }}" class="btn btn-info btn-block">edit</a>
                                        </td>
                                        <td>
                                            {{ include('food/_delete_form.html.twig') }}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('user_food_new') }}" class="btn btn-primary">Create new</a>


                    </div>
                </div>
                {{ include('user/usermenu.html.twig') }}
            </div>
        </div>
        <!-- /#page-content-wrapper -->

                </div>
                <!-- /#wrapper -->
                {% endblock %}
