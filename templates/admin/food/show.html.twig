{% extends 'adminbase.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Title</h3>
        </div>
        <div class="card-body">
            <h1>Restaurant</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ food.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ food.title }}</td>
                </tr>
                <tr>
                    <th>Keywords</th>
                    <td>{{ food.keywords }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ food.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img class="col-md-2" src="{{ asset ('uploads/images/')~ food.image }}"></td>
                </tr>
                <tr>
                    <th>Detail</th>
                    <td>{{ food.detail }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ food.status }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ food.createdAt ? food.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ food.updatedAt ? food.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('admin_food_index') }}" class="btn btn-block btn-secondary">back to list</a>

            <a href="{{ path('admin_food_edit', {'id': food.id}) }}" class="btn btn-block btn-info">edit</a>

            {{ include('admin/food/_delete_form.html.twig') }}
        </div>
        <!-- /.card-footer-->
    </div>
{% endblock %}
