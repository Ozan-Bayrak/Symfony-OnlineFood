{% extends 'adminbase.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Title</h3>
    </div>
    <div class="card-body">
        <h1>User List</h1>
        <div class="row">
        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Image</th>
                <th>Status</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td><img class="col-md-12" src="{{ asset ('uploads/images/')~ user.image }}" height="60"></td>
                    <td>{{ user.status }}</td>
                    <td>
                        <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">show</a>
                    </td>
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-info btn-sm">edit</a>
                    </td>
                    <td>
                        {{ include('admin/user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_user_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>
    <!-- /.card-footer-->
</div>
<!-- /.
{% endblock %}
