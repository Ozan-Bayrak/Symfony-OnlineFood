{% extends 'adminbase.html.twig' %}

{% block title %}Messages index{% endblock %}

{% block body %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Messages</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Status</th>
                        <th>Ip</th>
                        <th>Created_at</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.id }}</td>
                            <td>{{ message.name }}</td>
                            <td>{{ message.subject }}</td>
                            <td style="height: auto">{{ message.message }}</td>
                            <td>{{ message.status }}</td>
                            <td>{{ message.ip }}</td>
                            <td>{{ message.createdAt ? message.createdAt|date('d-m-y') : '' }}</td>
                            <td>
                                <a href="{{ path('admin_messages_show', {'id': message.id}) }}" class="btn btn-info btn-sm">show</a>
                            </td>
                            <td>
                                <a href="{{ path('admin_messages_edit', {'id': message.id}) }}" class="btn btn-info btn-sm">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>


{% endblock %}
