{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Foodid</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orders in orders %}
            <tr>
                <td>{{ orders.id }}</td>
                <td>{{ orders.title }}</td>
                <td>{{ orders.foodid }}</td>
                <td>{{ orders.description }}</td>
                <td>{{ orders.image }}</td>
                <td>{{ orders.price }}</td>
                <td>{{ orders.status }}</td>
                <td>
                    <a href="{{ path('admin_orders_show', {'id': orders.id}) }}">show</a>
                    <a href="{{ path('admin_orders_edit', {'id': orders.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
