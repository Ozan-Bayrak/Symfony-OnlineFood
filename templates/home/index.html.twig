{% extends 'homebase.html.twig' %}

{% block title %}{{ setting[0].title }} {% endblock %}
{% block keywords %}{{ setting[0].keywords }}{% endblock %}
{% block description %}{{ setting[0].description }}{% endblock %}
{% block sileder %}{% include('home/slider.html.twig') %}{% endblock %}

{% block body %}
    <!-- Start Categories  -->
    <div class="categories-shop">
        <div class="container">
            <div class="row">
                {% for food in foods %}
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="{{ asset ('uploads/images/') ~ food.image }}" style="height: 340px; width:350px; " alt="" />
                        <a class="btn hvr-hover" href="{{ path('food_show', {'id': food.id}) }}">{{food.title}}</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- End Categories -->

    <div class="box-add-products">
        <div class="container">
            <div class="row">
                {% for rs in yemek %}
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="offer-box-products">
                        <img class="img-fluid" src="{{ asset ('uploads/images/') ~ rs.image }}" style="height: 326px; width:570px " alt="" />
                        <a class="btn  btn-block hvr-hover" href="{{ path('food_show', {'id': rs.id}) }}">{{rs.title}}</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- End Blog  -->


    <!-- Start Instagram Feed  -->



{% endblock %}
