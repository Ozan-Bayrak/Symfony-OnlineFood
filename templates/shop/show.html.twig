{% extends 'homebase.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Order Detail</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">User Orders</a></li>
                        <li class="breadcrumb-item active">Orders</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="shop-box-inner">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                    <div class="right-product-box">
                        <h1>Order Details</h1>
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Order Total Pay:</th>
                                <td>{{ shop.amount }}₺</td>
                            </tr>
                            <tr>
                                <th>Name:</th>
                                <td>{{ shop.name }} {{ shop.surname }}</td>
                            </tr>
                            <tr>
                                <th>Adress:</th>
                                <td>{{ shop.adress }}</td>
                            </tr>
                            <tr>
                                <th>Phone:</th>
                                <td>{{ shop.phone }}</td>
                            </tr>
                            <tr>
                                <th>Payment_type:</th>
                                <td>{{ shop.paymentType }}</td>
                            </tr>
                            <tr>
                                <th>Orders Time:</th>
                                <td>{{ shop.createdAt ? shop.createdAt|date('d-m-Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Status:</th>
                                <td>{{ shop.status }}</td>
                            </tr>
                            </tbody>
                        </table>
                        </table>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Restaurant</th>
                                <th>Food Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for shopdetail in shopdetail %}
                                <tr>
                                    <td>{{ shopdetail.restauran}}</td>
                                    <td>{{ shopdetail.name }}</td>
                                    <td>{{ shopdetail.price }}₺</td>
                                    <td>{{ shopdetail.quantity }}</td>
                                    <td>{{ shopdetail.amount }}₺</td>
                                    <td>{{ shopdetail.status }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a class="btn btn-secondary btn-sm" href="{{ path('shop_index') }}">Back to List</a>
                    </div>
                </div>
                {{ include('user/usermenu.html.twig') }}
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

{% endblock %}
