{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }}{% endblock %}

{% block body %}
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>{{ app.user.name }}</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a>User Orders</a></li>
                        <li class="breadcrumb-item active">Orders</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="shop-box-inner">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                    <div class="right-product-box">
                        <h1>User Orders</h1>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Total</th>
                                <th>Payment Type</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for shop in shops %}
                                <tr>
                                    <td>{{ shop.name }} {{ shop.surname }}</td>
                                    <td>{{ shop.amount }}â‚º</td>
                                    <td>{{ shop.paymentType }}</td>
                                    <td>{{ shop.status }}</td>
                                    <td>
                                        <a class="btn btn-sm btn-secondary" href="{{ path('shop_show', {'id': shop.id}) }}">Detail</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {{ include('user/usermenu.html.twig') }}
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
{% endblock %}
